<table class="table table-hover table-dark">
    <thead>
        <tr>
            <th>&nbsp;</th>
            <th>#</th>
            <th>Character</th>
            <th>Account</th>
            <th>Class</th>
            <th>Level</th>
            <th>Experience</th>
            <th>Violations</th>
        </tr>
    </thead>
    <tbody>
        <% if(ladder.length > 0) { %>
        <% for(const character of ladder) { %>
        <tr class="clickable-row" data-cid="<%= character.character.id %>">
            <td class="pr-0">
                <% if(character.dead) { %>
                <i class="fas fa-skull-crossbones text-danger"></i>
                <% } %>
                <% if(character.retired) { %>
                <i class="fas fa-door-closed text-secondary"></i>
                <% } %>
            </td>
            <td><%= character.rank %></td>
            <td>
                <% if(character.online) { %>
                <i class="fas fa-user text-success mr-1"></i>
                <% } else { %>
                <i class="fas fa-user text-secondary mr-1"></i>
                <% } %>
                <%= character.character.name %>
                <a href="https://www.pathofexile.com/account/view-profile/<%= character.account.name %>/characters?characterName=<%= character.character.name %>"
                    target="_blank" class="text-secondary">
                    <i class="fas fa-external-link-alt ml-1"></i>
                </a>
            </td>
            <td>
                <%= character.account.name %>
                <a href="https://www.pathofexile.com/account/view-profile/<%= character.account.name %>" target="_blank"
                    class="text-secondary">
                    <i class="fas fa-external-link-alt ml-1"></i>
                </a>
            </td>
            <td>
                <%= character.character.class %>
            </td>
            <td><%= character.character.level %></td>
            <td><%= character.character.experience %></td>
            <td>
                <span class="badge badge-secondary w-33">
                    <%= character.violations.active + character.violations.resolved %>
                </span>
                <% if(character.violations.resolved > 0) { %>
                <span class="badge badge-success w-33">
                    <i class="fas fa-xs fa-check"></i>
                    <%= character.violations.resolved %>
                </span>
                <% } %>
                <% if(character.violations.active > 0) { %>
                <span class="badge badge-warning w-33">
                    <i class="fas fa-xs fa-exclamation-triangle"></i>
                    <%= character.violations.active %>
                </span>
                <% } %>
            </td>
        </tr>
        <% } %>
        <% } else { %>
        <tr>
            <td colspan="8">No results</td>
        </tr>
        <% } %>
    </tbody>
</table>